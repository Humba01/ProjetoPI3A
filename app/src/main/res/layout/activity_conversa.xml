<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_conversa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cabecalho_conversa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF7DF"
        android:orientation="horizontal"
        android:padding="6dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:onClick="btnReturnBackMainActivity"
            app:srcCompat="@drawable/baseline_arrow_back_24"
            tools:ignore="ContentDescription,InefficientWeight" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:fontFamily="@font/notosans_regular"
            android:text="@string/conversa1"
            android:textColor="#A1887F"
            android:textStyle="bold" />

        <Space
            android:layout_width="107dp"
            android:layout_height="23dp"
            android:layout_weight="1.4" />

        <ImageView
            android:id="@+id/mais_opcoes_conversa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            app:srcCompat="@drawable/baseline_more_vert_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="619dp" />

    <LinearLayout
        android:id="@+id/chat_input_mensagemgrupo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5f5f5f"
        android:orientation="horizontal"
        tools:ignore="UselessLeaf">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="0.4"
            android:background="#ffffff"
            android:ems="10"
            android:hint="digite aqui..."
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="#8D6E63"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <ImageView
            android:id="@+id/imageView99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="0.4"
            android:background="#FFEF63"
            android:minHeight="4dp"
            android:padding="4dp"
            app:srcCompat="@drawable/baseline_send_24"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </LinearLayout>

</LinearLayout>